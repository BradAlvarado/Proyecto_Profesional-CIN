@model IEnumerable<Sistema_CIN.Models.BitacoraIngresoSalidas>

@{
    ViewData["Title"] = "Index";
}

<h3 class="fw-bold fs-4 mb-3">Bitácoras > Ingresos y Salidas > Usuarios</h3>

<hr class="mb-4"/>

<div class="mb-5">
    <a class="btn btn-secondary btn-sm me-3" asp-controller="Home" asp-action="Index">Volver</a>

    <button class="btn btn-primary btn-sm text-white" onclick="recargarPagina()">Actualizar  <i class="fa-solid fa-rotate"></i></button>
</div>

<body>
    
    <table class="table table-bordered ">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdBitacora)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UsuarioB)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaIngreso)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaSalida)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EstadoActual)
                </th>
             
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        @Html.DisplayFor(modelItem => item.IdBitacora)
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.UsuarioB)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaIngreso)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaSalida)
                    </td>
                    <td>

                        @{
                            if (item.EstadoActual == 1)
                            {
                                <text><span class="text-success">En línea</span></text>
                            }
                            else
                            {

                                <text><i class="fa-regular fa-circle text-danger"></i>  Desconectado</text>
                            }


                        }

                    </td>
                   
                </tr>
            }
        </tbody>
    </table>
</body>

@section Scripts{
    <script>
        function recargarPagina(){
            location.reload();
        }
    </script>
}
