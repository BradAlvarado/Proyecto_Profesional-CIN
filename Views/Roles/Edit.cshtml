@model Sistema_CIN.Models.Roles

@{
    ViewData["Title"] = "Edit";
}

<h3 class="fw-bold fs-4">Administrar > Editar Rol</h3>

<div class="my-3">
    <a class="btn btn-outline-secondary btn-sm" asp-action="Index">Volver</a>
</div>

<form asp-action="Edit" class="my-4 ">


    <div class="row g-3 align-items-center mb-3">
        <input type="hidden" asp-for="IdRol" />
        <div class="col-auto">
            <label asp-for="NombreRol" class="col-form-label">Nombre del Rol</label>
        </div>
        <div class="col-auto">
            <input asp-for="NombreRol" type="text" class="form-control" placeholder="Nombre del Rol" required>
        </div>

    </div>

    <div asp-validation-summary="ModelOnly" class="alerta text-danger" role="alert"></div>


    <div class="col-auto mt-5">

        <button type="submit" class="btn btn-primary btn-sm">Editar  <i class="fa-solid fa-floppy-disk"></i></button>

        

    </div>
</form>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Espera 3 segundos (3000 milisegundos) antes de ocultar la alerta
        setTimeout(function () {
            const alertDiv = document.querySelector('.alerta');
            if (alertDiv) {
                alertDiv.style.display = 'none';
            }
        }, 2000);
    </script>
}
