@model IEnumerable<Sistema_CIN.Data.SistemaCIN_dbContext>

@{
    ViewData["Title"] = "Inicio";
}

@{
    int personalCount = ViewData["PersonalCount"] != null ? (int)ViewData["PersonalCount"] : 0;
    int pmeCount = ViewData["PmeCount"] != null ? (int)ViewData["PmeCount"] : 0;
    int encargadosCount = ViewData["EncargadosCount"] != null ? (int)ViewData["EncargadosCount"] : 0;
    int usuariosCount = ViewData["UsuariosCount"] != null ? (int)ViewData["UsuariosCount"] : 0;
}

<!----------MAIN--------->
<h3 class="fw-bold fs-4 mb-3">Inicio > Resumen Contadores</h3>
<div class="mb-3">


    <div class="row mt-4">
        <!----------EMPIEZA CONTADORES--------->
        <!----------PERSONAL--------->
        <div class="col-lg-3 col-md-6 col-sm-12 mb-4 ">

            <div class="card mb-3 shadow" style="max-width: 540px;">


                <div class="row g-0">

                    <div class="col-4 d-flex align-items-center justify-content-center bg-secondary">
                        <i class="fa-solid fa-users-between-lines display-4 text-center p-2 text-white"></i>
                    </div>

                    <div class="col-8">
                        <div class="card-body">
                            <h6 class="card-title fw-bold">Personal</h6>
                            <p class="card-text">Total  <span class="text-success fw-bold">@personalCount</span></p>
                            <p class="card-text">
                                <a asp-controller="Personal" asp-action="Index" class="nav-link text-secondary">

                                    <span>Más detalles</span>
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>


        </div>
        <!----------PME--------->
        <div class="col-lg-3 col-md-6 col-sm-12 mb-4 ">

            <div class="card mb-3 shadow" style="max-width: 540px;">


                <div class="row g-0">

                    <div class="col-4 d-flex align-items-center justify-content-center bg-secondary">

                        <i class="fa-solid fa-children display-4 text-center p-2 text-white"></i>
                    </div>

                    <div class="col-8">
                        <div class="card-body">
                            <h6 class="card-title fw-bold">PMEs</h6>
                            <p class="card-text">Total  <span class="text-primary fw-bold">@pmeCount</span></p>
                            <p class="card-text">
                                <a asp-controller="PME" asp-action="Index" class="nav-link text-secondary">

                                    <span>Más detalles</span>
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!----------ENCARGADOS--------->
        <div class="col-lg-3 col-md-6 col-sm-12 mb-4 ">

            <div class="card mb-3 shadow" style="max-width: 540px;">


                <div class="row g-0">

                    <div class="col-4 d-flex align-items-center justify-content-center bg-secondary">

                        <i class="fa-solid fa-person-breastfeeding display-4 text-center p-2 text-white"></i>
                    </div>

                    <div class="col-8">
                        <div class="card-body">
                            <h6 class="card-title fw-bold">Padres</h6>
                            <p class="card-text">Total  <span class="text-success fw-bold">@encargadosCount</span></p>
                            <p class="card-text">
                                <a asp-controller="Encargados" asp-action="Index" class="nav-link text-secondary">

                                    <span>Más detalles</span>
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <!----------USUARIOS--------->
        @if (usuariosCount > 0)
        {
            <div class="col-lg-3 col-md-6 col-sm-12 mb-4 ">

                <div class="card mb-3 shadow" style="max-width: 540px;">


                    <div class="row g-0">

                        <div class="col-4 d-flex align-items-center justify-content-center bg-secondary">

                            <i class="fa-solid fa-users display-4 text-center p-2 text-white"></i>
                        </div>

                        <div class="col-8">
                            <div class="card-body">
                                <h6 class="card-title fw-bold">Usuarios</h6>
                                <p class="card-text">
                                    Total  <span class="text-primary fw-bold">
                                        @usuariosCount
                                    </span>
                                </p>
                                <p class="card-text">
                                    <a asp-controller="Usuarios" asp-action="Index" class="nav-link text-secondary">

                                        <span>Más detalles</span>
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div><!----------END CONTADORES--------->
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


    @* ALERTA DE PERSONAL REGISTRADO / EDITADO EXITOSAMENTE*@
    @if (TempData["SuccessMessage"] != null)
    {
        <script>registroExito("@TempData["SuccessMessage"]");</script>
    }

}