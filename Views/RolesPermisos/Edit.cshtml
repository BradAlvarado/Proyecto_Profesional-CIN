@model Sistema_CIN.Models.Rol

@{
    ViewBag.Title = "Editar Rol";
}

<h2>Editar Rol</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Datos del Rol</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdRol)

        <div class="form-group">
            @Html.LabelFor(model => model.NombreRol, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NombreRol, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NombreRol, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Contenido de los módulos y sus operaciones -->
        @foreach (var kvp in ViewBag.OperacionesPorModulo)
        {
            int idModulo = kvp.Key;
            var operaciones = kvp.Value;

            <h4>Módulo @idModulo</h4>
            <div class="form-group">
                @foreach (var operacion in operaciones)
                {
                    <div class="checkbox">
                        <input type="checkbox" name="operacionesPorModulo[@idModulo][@(operacion.Key)]" id="operacion_@(idModulo)_@(operacion.Key)" @(operacion.Value ? "checked" : "")>
                        <label for="operacion_@(idModulo)_@(operacion.Key)">@operacion.Key</label>

                    </div>
                }
            </div>
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a la Lista", "Index")
</div>
