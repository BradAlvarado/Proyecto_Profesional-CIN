@model Sistema_CIN.Models.RolesPermisos

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row my-2">


    <div class="col py-2">
        <h3 class="fw-bold fs-4 mb-3">Administrar > Registrar Roles</h3>
        <a class="btn btn-secondary btn-sm" asp-action="Index">Volver</a>
    </div>


    <div asp-validation-summary="ModelOnly" class="alert alert-danger col" role="alert"></div>

</div>


<form method="post" asp-action="Create">
    <div class="col-6">
        <label class="col-form-label">Nombre del Rol</label>
        <input name="rol.NombreRol" type="text" class="form-control" placeholder="Nombre del Rol" required>
    </div>
    <div class="form-group">
        <h4 class="fw-bold fs-4">Accesos</h4>
        <h4 class="fw-bold fs-5">Modulo CRUD Estudiantes</h4>
        <div class="form-check">
            <input name="verChecked"  class="form-check-input" type="checkbox" value="true" id="verCheckbox">
            <label class="form-check-label" for="verCheckbox">Ver</label>
        </div>
        <div class="form-check">
            <input name="crearChecked" class="form-check-input" type="checkbox" value="true" id="crearCheckbox">
            <label class="form-check-label" for="crearCheckbox">Crear</label>
        </div>
        <div class="form-check">
            <input name="editarChecked" class="form-check-input" type="checkbox" value="true" id="editarCheckbox">
            <label class="form-check-label" for="editarCheckbox">Editar</label>
        </div>
        <div class="form-check">
            <input name="reportarChecked" class="form-check-input" type="checkbox" value="true" id="reportarCheckbox">
            <label class="form-check-label" for="reportarCheckbox">Reportar</label>
        </div>
        <div class="form-check">
            <input name="eliminarChecked" class="form-check-input" type="checkbox" value="true" id="eliminarCheckbox">
            <label class="form-check-label" for="eliminarCheckbox">Eliminar</label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Espera 3 segundos (3000 milisegundos) antes de ocultar la alerta
        setTimeout(function () {
            const alertaDiv = document.querySelector('.alert');
            if (alertaDiv) {
                alertaDiv.style.display = 'none';
            }
        }, 3000);
    </script>

    <script>
        $(document).ready(function () {
            $('.toggle-checkbox').click(function () {
                var target = $($(this).data('target'));
                target.toggle();
                if ($(this).prop('checked')) {
                    target.find('input[type="checkbox"]').prop('checked', true);
                } else {
                    target.find('input[type="checkbox"]').prop('checked', false);
                }
            });
        });
    </script>
}

