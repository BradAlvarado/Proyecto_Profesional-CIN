@model Sistema_CIN.Models.Personal

@{
    ViewData["Title"] = "Create";
}

<div class="row my-2">


    <div class="col py-2">
        <h3 class="fw-bold fs-4 mb-3">Mantenimiento > Registrar Personal</h3>
        <a class="btn btn-secondary btn-sm" asp-action="Index">Volver</a>
    </div>


    <div asp-validation-summary="ModelOnly" class="alert alert-danger col" role="alert"></div>

</div>

<form class="mt-5" asp-action="Create">
    <div class="row mt-4">

        <!--------Columna izquerda ---------->
        <div class="col-lg-6 col-md-12 col-sm-12">


            <!-------Nombre de Personal-------->
            <div class="mb-4 row">
                <label class="col-lg-4 col-md-3 col-sm-12 col-form-label">Nombre <span class="text-danger">*</span></label>

                <div class="col-lg-8 col-md-9 col-sm-12">
                    <input asp-for="NombreP" class="form-control" placeholder="Nombre" />
                    <span asp-validation-for="NombreP" class="text-danger"></span>
                </div>
            </div>

            <!-------Apellidos Personal-------->
            <div class="mb-4 row">
                <label asp-for="ApellidosP" class="col-lg-4 col-md-3 col-sm-12 col-form-label">Apellidos <span class="text-danger">*</span></label>
                <div class="col-lg-8 col-md-9 col-sm-12">
                    <input asp-for="ApellidosP" class="form-control" placeholder="Apellidos" />
                    <span asp-validation-for="ApellidosP" class="text-danger"></span>
                </div>
            </div>

            <!-------Cedula de Personal-------->
            <div class="mb-4 row">
                <label asp-for="CedulaP" class="col-lg-4 col-md-3 col-sm-12 col-form-label">Cédula <span class="text-danger">*</span></label>
                <div class="col-lg-8 col-md-9 col-sm-12">
                    <input asp-for="CedulaP" class="form-control" id="cedula" pattern="[0-9]{1}-[0-9]{4} [0-9]{4}" placeholder="Número de Cédula" oninput="formatCedula(this)" />
                    <span asp-validation-for="CedulaP" class="text-danger"></span>

                </div>
            </div>

            <!-------Correo de Personal-------->
            <div class="mb-4 row">
                <label asp-for="CorreoP" class="col-lg-4 col-md-3 col-sm-12 col-form-label">Correo electrónico <span class="text-danger">*</span></label>
                <div class="col-lg-8 col-md-9 col-sm-12">
                    <input type="email" asp-for="CorreoP" class="form-control" placeholder="empleado@ejemplo.com" />
                    <span asp-validation-for="CorreoP" class="text-danger"></span>

                </div>
            </div>

            <!-------Telefono de Personal-------->
            <div class="mb-4 row">
                <label asp-for="TelefonoP" class="col-lg-4 col-md-3 col-sm-12 col-form-label">Teléfono <span class="text-danger">*</span></label>
                <div class="col-lg-8 col-md-9 col-sm-12">
                    <input asp-for="TelefonoP" class="form-control" id="telefono" pattern="[0-9]{4}-[0-9]{4}" placeholder="N Teléfono" oninput="formatTelefono(this)" />
                    <span asp-validation-for="TelefonoP" class="text-danger"></span>

                </div>
            </div>

            <!-------Puesto de Personal-------->
            <div class="mb-4 row">
                <label asp-for="IdRol" class="col-lg-4 col-md-3 col-sm-12 col-form-label">Puesto <span class="text-danger">*</span></label>
                <div class="col-lg-8 col-md-9 col-sm-12">
                    <select asp-for="IdRol" class="form-select" asp-items="ViewBag.IdRol">

                        <option value="">Seleccione una opción</option>
                    </select>
                    <span asp-validation-for="IdRol" class="text-danger"></span>
                </div>
            </div>



        </div>


        <!--------Columna derecha ---------->
        <div class="col-lg-6 col-md-12 col-sm-12">

            <!-------- Fecha Nacimiento personal ---------->
            <div class="mb-4 row">
                <label asp-for="FechaNaceP" class="col-lg-4 col-md-3 col-sm-12 col-form-label">Fecha de Nacimiento <span class="text-danger">*</span></label>
                <div class="col-lg-8 col-md-9 col-sm-12">
                    <input type="date" asp-for="FechaNaceP" name="FechaNaceP" class="form-control" />
                    <span asp-validation-for="FechaNaceP" class="text-danger"></span>
                </div>
            </div>

            <!-------- Edad Personal ---------->
            <div class="mb-4 row">
                <label asp-for="EdadP" class="col-lg-4 col-md-3 col-sm-12 col-form-label">Edad</label>
                <div class="col-lg-8 col-md-9 col-sm-12">
                    <input asp-for="EdadP" name="EdadP" class="form-control" placeholder="Edad" readonly />
                    <span asp-validation-for="EdadP" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-4 row">
                <label asp-for="GeneroP" class="col-lg-4 col-md-3 col-sm-12 col-form-label">Genero <span class="text-danger">*</span></label>
                <div class="col-lg-8 col-md-9 col-sm-12">
                    <select asp-for="GeneroP" class="form-select">
                        <option value="No encontrado">-- Seleccione el género --</option>
                        <option value="Masculino">Masculino</option>
                        <option value="Femenino">Femenino</option>
                    </select>
                    <span asp-validation-for="GeneroP" class="text-danger"></span>
                </div>
            </div>


            <div class="mb-4 row">
                <label asp-for="ProvinciaP" class="col-lg-4 col-md-3 col-sm-12 col-form-label">Provincia <span class="text-danger">*</span></label>
                <div class="col-lg-8 col-md-9 col-sm-12">
                    <select asp-for="ProvinciaP" class="form-select">
                        <option>Selecciona provincia</option>
                        <option value="San José">San José</option>
                        <option value="Heredia">Heredia</option>
                        <option value="Cartago">Cartago</option>
                        <option value="Alajuela">Alajuela</option>
                        <option value="Limón">Limón</option>
                        <option value="Puntarenas">Puntarenas</option>
                        <option value="Guanacaste">Guanacaste</option>
                    </select>
                    <span asp-validation-for="ProvinciaP" class="text-danger"></span>
                </div>
            </div>


            <div class="mb-4 row">
                <label asp-for="CantonP" class="col-lg-4 col-md-3 col-sm-12 col-form-label">Cantón <span class="text-danger">*</span></label>
                <div class="col-lg-8 col-md-9 col-sm-12">
                    <input asp-for="CantonP" class="form-control" placeholder="Cantón" />
                    <span asp-validation-for="CantonP" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-4 row">
                <label asp-for="DistritoP" class="col-lg-4 col-md-3 col-sm-12 col-form-label">Distrito</label>
                <div class="col-lg-8 col-md-9 col-sm-12">
                    <input asp-for="DistritoP" class="form-control" placeholder="Distrito" />
                    <span asp-validation-for="DistritoP" class="text-danger"></span>
                </div>
            </div>

        </div>

    </div>




    <div class="col-auto mt-4">

        <button type="submit" class="btn btn-primary btn-sm me-3 text-white">Registrar  <i class="fa-solid fa-cloud-arrow-up"></i></button>
        <button type="reset" class="btn btn-outline-danger btn-sm">Limpiar</button>

    </div>

</form>





@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Espera 3 segundos (3000 milisegundos) antes de ocultar la alerta
        setTimeout(function () {
            const alertaDiv = document.querySelector('.alerta');
            if (alertaDiv) {
                alertaDiv.style.display = 'none';
            }
        }, 3000);

        document.addEventListener('DOMContentLoaded', function () {

            calcularEdad('FechaNaceP', 'EdadP');

        });
    </script>

}
