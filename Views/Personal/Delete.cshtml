@model Sistema_CIN.Models.Personal

@{
	ViewData["Title"] = "Delete";
}
<h3 class="fw-bold fs-4 mb-3">Mantenimiento > Eliminar Personal</h3>

<div>
	<a class="btn btn-outline-secondary" asp-action="Index">Volver</a>
</div>
<br>

<h3>¿Seguro que desea eliminar este Personal?</h3>
<div>
	<br>

	<dl class="row">
		<dt class="col-sm-2">
			N.Cédula
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.CedulaP)
		</dd>
		<dt class="col-sm-2">
			Nombre Completo
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.NombreP)      @Html.DisplayFor(model => model.ApellidosP)

		</dd>

		<dt class="col-sm-2">
			Correo Electrónico
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.CorreoP)
		</dd>
		<dt class="col-sm-2">
			Puesto
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.PuestoP)
		</dd>
		<dt class="col-sm-2">
			Fecha Naciemiento
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.FechaNaceP)
		</dd>
		<dt class="col-sm-2">
			Edad
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.EdadP)
		</dd>
		<dt class="col-sm-2">
			Género
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.GeneroP)
		</dd>
		<dt class="col-sm-2">
			Dirección
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.ProvinciaP) 			@Html.DisplayFor(model => model.CantonP)			@Html.DisplayFor(model => model.DistritoP)

		</dd>

	</dl>

	<form asp-action="Delete">
		<input type="hidden" asp-for="IdPersonal" />
		<input type="submit" value="Eliminar" class="btn btn-danger" />
		<a class="btn btn-warning" asp-action="Index">Cancelar</a>

	</form>
</div>
