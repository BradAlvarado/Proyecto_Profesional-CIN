@model IEnumerable<Sistema_CIN.Models.Personal>

@{
    ViewData["Title"] = "Reporte personal";
    Layout = "~/Views/Shared/_ReportLayout.cshtml";
}

<h3 class="fw-bold fs-4">Mantenimiento > Personal</h3>


<div class="row my-4 align-items-center">
    <div class="col">

        <a class="btn btn-outline-secondary btn-sm" asp-area="" asp-controller="Personal" asp-action="VerPDF">Descargar PDF <i class="fa-solid fa-download"></i></a>
    </div>

    <div class="col-auto">

        <form asp-controller="Personal" asp-action="IndexPDF">

            <input type="submit" class="btn btn-outline-danger btn-sm col-xs-1" value="Restablecer" />

            <a type="submit" class="btn btn-outline-success btn-sm " href="@Url.Action("IndexPDF", new { sortOrder = "name_asc" })">A-Z</a>
            <a type="submit" class="btn btn-outline-success btn-sm " href="@Url.Action("IndexPDF", new { sortOrder = "name_des" })">Z-A</a>
            <a type="submit" class="btn btn-outline-secondary btn-sm " href="@Url.Action("IndexPDF", new { sortOrder = "edad_asc" })">Menor - Mayor</a>
            <a type="submit" class="btn btn-outline-secondary btn-sm " href="@Url.Action("IndexPDF", new { sortOrder = "edad_des" })">Mayor - Menor</a>
        </form>
    </div>

  
</div>

<div class="table-responsive">


    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>
                    N.Cédula
                </th>
                <th>
                    Nombre Completo
                </th>
                <th>
                    Edad
                </th>

                <th>
                    Correo Electrónico
                </th>
                <th>
                    Teléfono
                </th>
                <th>
                    Dirección
                </th>
                <th>
                    Puesto
                </th>

            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        @Html.DisplayFor(modelItem => item.CedulaP)
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreP) @Html.DisplayFor(modelItem => item.ApellidosP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EdadP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CorreoP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TelefonoP)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.ProvinciaP) @Html.DisplayFor(modelItem => item.CantonP)  @Html.DisplayFor(modelItem => item.DistritoP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdRolNavigation.NombreRol)
                    </td>
                </tr>
            }
        </tbody>

    </table>

    <div asp-validation-summary="ModelOnly" class="alert alert-danger col" role="alert"></div>

    

</div>

