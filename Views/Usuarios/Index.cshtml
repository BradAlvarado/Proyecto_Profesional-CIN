@model IEnumerable<Sistema_CIN.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h3 class="fw-bold fs-4">Administrar > Usuarios</h3>
<div class="row my-4 ">
    <div class="col">
        <a class="btn btn-primary btn-sm text-white" asp-action="Create">Añadir <i class="fa-solid fa-plus"></i></a>
    </div>

    <div class="container-fluid col-auto bg-light p-2 shadow-sm rounded">
        <form asp-controller="Roles" asp-action="Index">
            <i class="fa-solid fa-magnifying-glass"></i>
            <input type="text" name="buscarRol" placeholder="Buscar aquí..." class="fluid border-0 bg-light col">
            <input type="submit" class="btn btn-secondary btn-sm col-xs-1" value="Buscar" />
        </form>
    </div>
</div>


<table class="table table-striped my-4 rounded shadow-sm">
    <thead>

        <tr class="highlight">
            <th scope="col">Foto</th>
            <th scope="col">Nombre de Usuario</th>
            <th scope="col">Correo</th>
            <th scope="col">Rol</th>
            <th scope="col">Acceso</th>
            <th scope="col">Aciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FotoU)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreU)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CorreoU)
                </td>
     
                <td>
                    @Html.DisplayFor(modelItem => item.IdRolNavigation.NombreRol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstadoU)
                </td>
                <td>
                    <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@item.IdUsuario"><i class="fa-regular fa-pen-to-square"></i></a> |
                    <a class="btn btn-light btn-sm" asp-action="Details" asp-route-id="@item.IdUsuario"><i class="fa-regular fa-eye"></i></a> |
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.IdUsuario"><i class="fa-solid fa-trash-can"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="my-3">
    <a class="btn btn-outline-secondary btn-sm" asp-controller="Home" asp-action="Index">Volver</a>
</div>
@section Scripts{

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if (TempData["SuccessMessage"] != null)
    {

        <script>registroExito("@TempData["SuccessMessage"]");</script>
    }
}