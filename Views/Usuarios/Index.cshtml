@model IEnumerable<Sistema_CIN.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Foto</th>
            <th>
                Nombre de Usuario
            </th>
            <th>
                Email
            </th>
            <th>
                Clave
            </th>

            <th>
                Rol
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Imagen_U)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre_U)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Correo_U)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Clave)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.IdRolNavigation.NombreRol)
                </td>
                <td>
                    <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@item.Id_Usuario">Editar</a> 
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id_Usuario">Detalles</a> 
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id_Usuario">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
