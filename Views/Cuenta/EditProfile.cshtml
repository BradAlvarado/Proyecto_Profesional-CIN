@model Sistema_CIN.Models.Usuario

@{
    ViewData["Title"] = "Editar Perfil";
}


<div class="row my-2">


    <div class="col py-2">
        <h3 class="fw-bold fs-4 mb-3">Editar Perfil</h3>
        <a class="btn btn-secondary btn-sm" asp-controller="Home" asp-action="Index">Volver</a>
    </div>

    <div asp-validation-summary="ModelOnly" class="alert alert-danger col" role="alert"></div>

</div>

<form asp-action="EditProfile" class="mt-3">
    <div class="row">
        <div class="col-lg-2 col-md-4 col-sm-12">
            <!-- Profile picture card-->
            <div class="card mb-4 mb-xl-0">
                <div class="card-header">Foto de Perfil</div>
                <div class="card-body text-center">
                    <!-- Profile picture image-->

                    <img class="img-fluid img-account-profile img-thumbnail rounded-circle mb-2" src="~/images/Default_Profile_photo.jpg" alt="">
                    <!-- Profile picture help block-->
                    <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                    <!-- Profile picture upload button-->
                    <input asp-for="FotoU" type="file" class="form-control">
                    @*<span asp-validation-for="FotoU" class="text-danger"></span>*@
                </div>
            </div>
        </div>


        <div class="col-lg-10 col-md-8 col-sm-12">
            <div class="card">


                <div class="card-header mb-3">Datos personales</div>
                <div class="card-body px-4">

                    <!-------Nombre de Usuario-------->
                    <div class="mb-4 row">
                        <label class="col-lg-4 col-form-label">Nombre Usuario</label>
                        <div class="col-lg-8 ">
                            <input asp-for="IdUsuario" type="hidden"/>

                            <input asp-for="NombreU" class="form-control" placeholder="nombre del usuario" />
                            <span asp-validation-for="NombreU" class="text-danger"></span>
                        </div>
                    </div>
                    <!-------Correo-------->
                    <div class="mb-4 row">
                        <label class="col-lg-4 col-form-label">Correo Electrónico</label>
                        <div class="col-lg-8">
                            <input type="email" asp-for="CorreoU" class="form-control" readonly/>
                            <span asp-validation-for="CorreoU" class="text-danger"></span>
                        </div>
                    </div>

                    <!-------Clave-------->
                    <div class="mb-4 row">
                        <label class="col-lg-4 col-form-label">Cambiar Contraseña</label>
                        <div class="col-lg-8">
                            <input type="password" asp-for="Clave" class="form-control" placeholder="Cambie su contraseña"/>
                            
                        </div>
                    </div>

                    <!-------Confirmar Clave-------->
                    <div class="mb-4 row">
                        <label class="col-lg-4 col-form-label">Contraseña</label>
                        <div class="col-lg-8">
                            <input type="password" asp-for="ConfirmarClave" class="form-control" placeholder="Confirme su contraseña" />
                            <span asp-validation-for="ConfirmarClave" class="text-danger"></span>
                        </div>
                    </div>

                    <!------- ROL -------->
                    <div class="mb-4 row">
                        <label asp-for="IdRol" class="col-lg-4 col-form-label">Rol</label>
                        <div class="col-lg-8">
                            <input asp-for="IdRolNavigation.NombreRol" class="form-control" readonly/>
                            <span asp-validation-for="IdRol" class="text-danger"></span>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="mt-5">

            <button type="submit" class="btn btn-primary btn-sm me-3 text-white">Aplicar  <i class="fa-regular fa-floppy-disk"></i></button>
            <button type="reset" class="btn btn-outline-danger btn-sm">Limpiar</button>

        </div>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Espera 3 segundos (3000 milisegundos) antes de ocultar la alerta
        setTimeout(function () {
            const alertaDiv = document.querySelector('.alerta');
            if (alertaDiv) {
                alertaDiv.style.display = 'none';
            }
        }, 3000);
    </script>

    @* ALERTA DE PERSONAL REGISTRADO / EDITADO EXITOSAMENTE*@
    @if (TempData["SuccessMessage"] != null)
    {

        <script>registroExito("@TempData["SuccessMessage"]");</script>

    }

}